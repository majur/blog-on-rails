<h1>Správa menu</h1>

<div class="mb-4">
  <h2>Aktuálne položky menu</h2>
  <% if @menu_items.empty? %>
    <p>Menu neobsahuje žiadne položky.</p>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Názov</th>
          <th>Slug</th>
          <th>Pozícia</th>
          <th>Akcie</th>
        </tr>
      </thead>
      <tbody>
        <% @menu_items.each do |page| %>
          <tr>
            <td><%= page.title %></td>
            <td><%= page.slug %></td>
            <td><%= page.position %></td>
            <td class="d-flex">
              <%= button_to "↑", reorder_menu_path(page, direction: 'up'), 
                method: :patch, 
                class: "btn btn-sm btn-outline-primary me-1",
                disabled: page.first? %>
              
              <%= button_to "↓", reorder_menu_path(page, direction: 'down'), 
                method: :patch, 
                class: "btn btn-sm btn-outline-primary me-1",
                disabled: page.last? %>
              
              <%= button_to "Na začiatok", reorder_menu_path(page, direction: 'top'), 
                method: :patch,
                class: "btn btn-sm btn-outline-secondary me-1",
                disabled: page.first? %>
              
              <%= button_to "Na koniec", reorder_menu_path(page, direction: 'bottom'), 
                method: :patch,
                class: "btn btn-sm btn-outline-secondary me-1",
                disabled: page.last? %>
              
              <%= button_to "Odstrániť z menu", menu_path(page), 
                method: :patch,
                params: { page: { is_in_menu: false } },
                class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<div class="mb-4">
  <h2>Dostupné stránky</h2>
  <% if @pages.empty? %>
    <p>Nie sú dostupné žiadne stránky, ktoré by bolo možné pridať do menu.</p>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Názov</th>
          <th>Slug</th>
          <th>Akcie</th>
        </tr>
      </thead>
      <tbody>
        <% @pages.each do |page| %>
          <tr>
            <td><%= page.title %></td>
            <td><%= page.slug %></td>
            <td>
              <%= button_to "Pridať do menu", menu_path(page), 
                method: :patch,
                params: { page: { is_in_menu: true } },
                class: "btn btn-sm btn-outline-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "Späť na hlavnú stránku", root_path, class: "btn btn-primary" %>
</div> 