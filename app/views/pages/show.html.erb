<p id="notice"><%= notice %></p>

<h1>
  <%= @page.title %>
</h1>

<div>
  <%= @page.content %>
</div>
<hr class="solid">
<p><em>Published by <%= @page.user.name %> on <%= @page.created_at.strftime('%B %d, %Y') %></em></p>

<div class="links">
  <% if user_signed_in? && (current_user.superadmin? || (current_user.author? && @page.user == current_user)) %>
    <%= link_to 'Edit page', edit_page_path(@page) %> |
  <% end %>
  <%= link_to 'Back to pages', pages_path %>
</div>
